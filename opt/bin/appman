#!/bin/sh

cd /opt/bin
case "$1" in
  ''|'-h'|'--help') echo "
  Usage: appman [options]
  where options include:
  
  -h, --help	Print this message.
  -c, clean	Cleans /opt/bin by removing all *zs-old backup files.
  -s, sync	Updates the list of available apps.
  -u, update	Update all the AppImages in /opt/bin using appimageupdate.
  
  COMMANDS:
  
  appinstall [PROGRAM] 	- Install an application.
  
  appremove [PROGRAM] 	- Removes an application and its files.


  For a complete list of available applications, visit:
  
  https://github.com/ivan-hc/AppMan/tree/main/applications
  
  " ;;
  '-u'|'update') cd /opt/bin && for f in *; do appimageupdate -O "$f"; done ;;
  '-c'|'clean') cd /opt/bin; echo ""; echo "Removing all backup files available in /opt/bin..."; sleep 1;
	echo ""; rm *zs-old; echo ""; echo "All *zs-old backup files are removed, exiting."; echo "" ;;
  '-s'|'sync') cd /opt/bin; rm /opt/bin/appinstall /opt/bin/appremove;
	wget https://raw.githubusercontent.com/ivan-hc/AppMan/main/opt/bin/appinstall && chmod a+x ./appinstall;
	wget https://raw.githubusercontent.com/ivan-hc/AppMan/main/opt/bin/appremove && chmod a+x ./appremove ;;
  *) exec /opt/bin/appman ;;
esac
