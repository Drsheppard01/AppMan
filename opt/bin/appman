#!/bin/sh

cd /opt/bin
case "$1" in
  '') echo "
  Usage: appman [options]
  where options include:
  
  -h		Print this message.
  -u, update	Update all the AppImages in /opt/bin using appimageupdate.
  		and asks to remove residual *zs-old backup files.
  -c, clean	Cleans /opt/bin by removing all *zs-old backup files.
  sdk		Updates platform-tools for Android (adb, fastboot...).
  
  Commands:
  
  appman-install - Install an application.
  
  appman-remove - Removes an application and its files.
  
  appman-sync - Updates the list of available applications.
  
  For a complete list of available applications, visit:
  
  https://github.com/ivan-hc/AppMan/tree/main/applications
  
  " ;;
  '-h') echo "
  Usage: appman [options]
  where options include:
  
  -h		Print this message.
  -u, update	Update all the AppImages in /opt/bin using appimageupdate.
  		and asks to remove residual *zs-old backup files.
  -c, clean	Cleans /opt/bin by removing all *zs-old backup files.
  sdk		Updates platform-tools for Android (adb, fastboot...).
  
  Commands:
  
  appman-install - Install an application.
  
  appman-remove - Removes an application and its files.
  
  appman-sync - Updates the list of available applications.
  
  For a complete list of available applications, visit:
  
  https://github.com/ivan-hc/AppMan/tree/main/applications
  
  " ;;
  'update') exec /opt/bin/appman-update ;;  '-u') exec /opt/bin/appman-update ;;
  'clean')   exec /opt/bin/appman-clean ;;  '-c')   exec /opt/bin/appman-clean ;;
  'sdk') exec /opt/bin/sdk-update ;;
  *) exec /opt/bin/appman ;;
esac
