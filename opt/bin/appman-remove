#!/bin/sh

cd /opt/bin
case "$1" in
'ice') rm /opt/bin/ice /home/$USER/.local/share/applications/ice.desktop /home/$USER/.local/share/icons/ice.png;;
'openshot') rm /opt/bin/openshot /home/$USER/.local/share/applications/openshot.desktop /home/$USER/.local/share/icons/openshot.png;;
  *) exec /opt/bin/appman-remove ;;
esac
