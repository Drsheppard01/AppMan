#!/bin/sh

cd /opt/bin
case "$1" in
	'') bash -x "appman" ;;
	'adb'|'fastboot'|'platform-tools') for i in "platform-tools"; do appman -s;
		wget https://raw.githubusercontent.com/ivan-hc/AppMan/main/applications/$i/$i-installer ;
		chmod a+x ./$i-installer ; exec /opt/bin/$i-installer ; done;;
	'anydesk') for i in "anydesk"; do appman -s;
		wget https://raw.githubusercontent.com/ivan-hc/AppMan/main/applications/$i/$i-installer ;
		chmod a+x ./$i-installer ; exec /opt/bin/$i-installer ; done;;
	'audacity') for i in "audacity"; do appman -s;
		wget https://raw.githubusercontent.com/ivan-hc/AppMan/main/applications/$i/$i-installer ;
		chmod a+x ./$i-installer ; exec /opt/bin/$i-installer ; done;;
	'avidemux') for i in "avidemux"; do appman -s;
		wget https://raw.githubusercontent.com/ivan-hc/AppMan/main/applications/$i/$i-installer ;
		chmod a+x ./$i-installer ; exec /opt/bin/$i-installer ; done;;
	'bottles-dev'|'wine-bottles-dev') for i in "bottles-dev"; do appman -s;
		wget https://raw.githubusercontent.com/ivan-hc/AppMan/main/applications/$i/$i-installer ;
		chmod a+x ./$i-installer ; exec /opt/bin/$i-installer ; done;;
	'celestia') for i in "celestia"; do appman -s;
		wget https://raw.githubusercontent.com/ivan-hc/AppMan/main/applications/$i/$i-installer ;
		chmod a+x ./$i-installer ; exec /opt/bin/$i-installer ; done;;
	'celestia-dev') for i in "celestia-dev"; do appman -s;
		wget https://raw.githubusercontent.com/ivan-hc/AppMan/main/applications/$i/$i-installer ;
		chmod a+x ./$i-installer ; exec /opt/bin/$i-installer ; done;;
	'chromium-dev') for i in "chromium-dev"; do appman -s;
		wget https://raw.githubusercontent.com/ivan-hc/AppMan/main/applications/$i/$i-installer ;
		chmod a+x ./$i-installer ; exec /opt/bin/$i-installer ; done;;
	'firefox'|'firefox-stable') for i in "firefox-stable"; do appman -s;
		wget https://raw.githubusercontent.com/ivan-hc/AppMan/main/applications/$i/$i-installer ;
		chmod a+x ./$i-installer ; exec /opt/bin/$i-installer ; done;;
	'firefox-dev'|'firefox-development') for i in "firefox-dev"; do appman -s;
		wget https://raw.githubusercontent.com/ivan-hc/AppMan/main/applications/$i/$i-installer ;
		chmod a+x ./$i-installer ; exec /opt/bin/$i-installer ; done;;
	'firefox-esr') for i in "firefox-esr"; do appman -s;
		wget https://raw.githubusercontent.com/ivan-hc/AppMan/main/applications/$i/$i-installer ;
		chmod a+x ./$i-installer ; exec /opt/bin/$i-installer ; done;;
	'firefox-nightly'|'firefox-beta') for i in "firefox-nightly"; do appman -s;
		wget https://raw.githubusercontent.com/ivan-hc/AppMan/main/applications/$i/$i-installer ;
		chmod a+x ./$i-installer ; exec /opt/bin/$i-installer ; done;;
	'google-chrome'|'chrome') for i in "google-chrome"; do appman -s;
		wget https://raw.githubusercontent.com/ivan-hc/AppMan/main/applications/$i/$i-installer ;
		chmod a+x ./$i-installer ; exec /opt/bin/$i-installer ; done;;
	'ice'|'ice-ssb') for i in "ice"; do appman -s;
		wget https://raw.githubusercontent.com/ivan-hc/AppMan/main/applications/$i/$i-installer ;
		chmod a+x ./$i-installer ; exec /opt/bin/$i-installer ; done;;
	'ocenaudio') for i in "ocenaudio"; do appman -s;
		wget https://raw.githubusercontent.com/ivan-hc/AppMan/main/applications/$i/$i-installer ;
		chmod a+x ./$i-installer ; exec /opt/bin/$i-installer ; done;;
	'onlyoffice') for i in "onlyoffice"; do appman -s;
		wget https://raw.githubusercontent.com/ivan-hc/AppMan/main/applications/$i/$i-installer ;
		chmod a+x ./$i-installer ; exec /opt/bin/$i-installer ; done;;
	'openshot'|'openshot-qt') for i in "openshot"; do appman -s;
		wget https://raw.githubusercontent.com/ivan-hc/AppMan/main/applications/$i/$i-installer ;
		chmod a+x ./$i-installer ; exec /opt/bin/$i-installer ; done;;
	'qbittorrent') for i in "qbittorrent"; do appman -s;
		wget https://raw.githubusercontent.com/ivan-hc/AppMan/main/applications/$i/$i-installer ;
		chmod a+x ./$i-installer ; exec /opt/bin/$i-installer ; done;;
	'bottles-dev'|'wine-bottles-dev') for i in "bottles-dev"; do appman -s;
		wget https://raw.githubusercontent.com/ivan-hc/AppMan/main/applications/$i/$i-installer ;
		chmod a+x ./$i-installer ; exec /opt/bin/$i-installer ; done;;
	'wine-stable'|'wine') for i in "wine-stable"; do appman -s;
		wget https://raw.githubusercontent.com/ivan-hc/AppMan/main/applications/$i/$i-installer ;
		chmod a+x ./$i-installer ; exec /opt/bin/$i-installer ; done;;
	'wine-devel'|'wine-development') for i in "wine-devel"; do appman -s;
		wget https://raw.githubusercontent.com/ivan-hc/AppMan/main/applications/$i/$i-installer ;
		chmod a+x ./$i-installer ; exec /opt/bin/$i-installer ; done;;
	'wine-staging') for i in "wine-staging"; do appman -s;
		wget https://raw.githubusercontent.com/ivan-hc/AppMan/main/applications/$i/$i-installer ;
		chmod a+x ./$i-installer ; exec /opt/bin/$i-installer ; done;;
*) exec /opt/bin/appinstall ;;
esac
