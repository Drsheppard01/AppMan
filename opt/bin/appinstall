#!/bin/sh

URL="https://raw.githubusercontent.com/ivan-hc/AppMan/main/applications"

cd /opt/bin
case "$1" in
	'') bash -x "appman" ;;
	'adb'|'fastboot'|'platform-tools') for i in "platform-tools"; do wget $URL/$i/$i-installer ;
		chmod a+x ./$i-installer ; exec /opt/bin/$i-installer ; done;;
	'anydesk') for i in "anydesk"; do wget $URL/$i/$i-installer ;
		chmod a+x ./$i-installer ; exec /opt/bin/$i-installer ; done;;
	'audacity') for i in "audacity"; do wget $URL/$i/$i-installer ;
		chmod a+x ./$i-installer ; exec /opt/bin/$i-installer ; done;;
	'avidemux') for i in "avidemux"; do wget $URL/$i/$i-installer ;
		chmod a+x ./$i-installer ; exec /opt/bin/$i-installer ; done;;
	'bottles'|'wine-bottles') for i in "wine-bottles"; do wget $URL/$i/$i-installer ;
		chmod a+x ./$i-installer ; exec /opt/bin/$i-installer ; done;;
	'celestia') for i in "celestia"; do wget $URL/$i/$i-installer ;
		chmod a+x ./$i-installer ; exec /opt/bin/$i-installer ; done;;
	'celestia-dev') for i in "celestia-dev"; do wget $URL/$i/$i-installer ;
		chmod a+x ./$i-installer ; exec /opt/bin/$i-installer ; done;;
	'chromium-dev') for i in "chromium-dev"; do wget $URL/$i/$i-installer ;
		chmod a+x ./$i-installer ; exec /opt/bin/$i-installer ; done;;
	'firefox'|'firefox-stable') for i in "firefox-stable"; do wget $URL/$i/$i-installer ;
		chmod a+x ./$i-installer ; exec /opt/bin/$i-installer ; done;;
	'firefox-dev'|'firefox-development') for i in "firefox-dev"; do wget $URL/$i/$i-installer ;
		chmod a+x ./$i-installer ; exec /opt/bin/$i-installer ; done;;
	'firefox-esr') for i in "firefox-esr"; do wget $URL/$i/$i-installer ;
		chmod a+x ./$i-installer ; exec /opt/bin/$i-installer ; done;;
	'firefox-nightly'|'firefox-beta') for i in "firefox-nightly"; do wget $URL/$i/$i-installer ;
		chmod a+x ./$i-installer ; exec /opt/bin/$i-installer ; done;;
	'google-chrome'|'chrome') for i in "google-chrome"; do wget $URL/$i/$i-installer ;
		chmod a+x ./$i-installer ; exec /opt/bin/$i-installer ; done;;
	'ice'|'ice-ssb') for i in "ice"; do wget $URL/$i/$i-installer ;
		chmod a+x ./$i-installer ; exec /opt/bin/$i-installer ; done;;
	'ocenaudio') for i in "ocenaudio"; do wget $URL/$i/$i-installer ;
		chmod a+x ./$i-installer ; exec /opt/bin/$i-installer ; done;;
	'onlyoffice') for i in "onlyoffice"; do wget $URL/$i/$i-installer ;
		chmod a+x ./$i-installer ; exec /opt/bin/$i-installer ; done;;
	'openshot'|'openshot-qt') for i in "openshot"; do wget $URL/$i/$i-installer ;
		chmod a+x ./$i-installer ; exec /opt/bin/$i-installer ; done;;
	'qbittorrent') for i in "qbittorrent"; do wget $URL/$i/$i-installer ;
		chmod a+x ./$i-installer ; exec /opt/bin/$i-installer ; done;;
	'thunderbird') for i in "thunderbird"; do wget $URL/$i/$i-installer ;
		chmod a+x ./$i-installer ; exec /opt/bin/$i-installer ; done;;
	'wine-stable'|'wine') for i in "wine-stable"; do wget $URL/$i/$i-installer ;
		chmod a+x ./$i-installer ; exec /opt/bin/$i-installer ; done;;
	'wine-devel'|'wine-development') for i in "wine-devel"; do wget $URL/$i/$i-installer ;
		chmod a+x ./$i-installer ; exec /opt/bin/$i-installer ; done;;
	'wine-staging') for i in "wine-staging"; do wget $URL/$i/$i-installer ;
		chmod a+x ./$i-installer ; exec /opt/bin/$i-installer ; done;;
*) exec /opt/bin/appinstall ;;
esac
